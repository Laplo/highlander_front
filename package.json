{
  "name": "react-mspr-ci",
  "version": "1.0.2",
  "private": true,
  "dependencies": {
    "auto-changelog": "1.16.2",
    "bootstrap": "4.4.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.3.1",
    "reactstrap": "8.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@testing-library/dom": "6.12.2",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.1.0",
    "coveralls": "3.0.9",
    "cypress": "4.0.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "git-precommit-checks": "3.0.0",
    "husky": "4.2.1",
    "jest": "24.9.0",
    "jest-sonar-reporter": "2.0.0",
    "precise-commits": "1.0.2",
    "prettier": "1.19.1",
    "start-server-and-test": "1.10.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/coveralls/bin/coveralls.js",
    "test:cypress": "start-server-and-test start http://release.highlander.fail cypress",
    "cypress": "cypress run",
    "eject": "react-scripts eject",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "cy:verify": "cypress install && cypress verify"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run version && CI=true npm run test"
    }
  },
  "hooks": {
    "pre-commit": [
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "filter": "\\.js$",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You have unfinished devs",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "cy": true
    }
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
